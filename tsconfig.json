{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true, 
    "outDir": "./out",
    "strict": true, 
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true, 
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}